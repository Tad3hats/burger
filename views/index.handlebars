<h1>Burgers!</h1>

<h2>Burger Menu</h2>

<ul>
  {{#each burger}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers eaten</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour</label><br>
    <input type="radio" name="eaten" value="1" checked> Ready to eat<br>
    <input type="radio" name="eaten" value="0"> Eaten
  </div>

  <button type="submit">Add burger</button>
</form>