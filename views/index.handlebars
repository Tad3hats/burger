<h1>Burgers!</h1>

<h2>Burger Menu</h2>

<ul>
  {{#each burgers}} {{#unless eaten}}
  <li>
    {{burger_name}}

    <button class="eaten" data-id="{{id}}" data-eaten="{{eaten}}">
      {{#if eaten}}yummy!{{else}}eat me!{{/if}}
    </button>

    <button class="delete-burger" data-id="{{id}}">DELETE!</button>
  </li>

  {{/unless}} {{/each}}
</ul>

<h2>Burgers eaten</h2>

<ul>
  {{#each burgers}} {{#if eaten}}
  <li>
    {{burger_name}}

    <button class="eaten" data-id="{{id}}" data-eaten="{{eaten}}">
      {{#if eaten}}yummy!{{else}}eat me!{{/if}}
    </button>

    <button class="delete-burger" data-id="{{id}}">DELETE!</button>
  </li>

  {{/if}} {{/each}}
</ul>


<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour</label>
    <br>
    <input type="radio" name="eaten" value="1" checked> Ready to eat
    <br>
    <input type="radio" name="eaten" value="0"> Eaten
  </div>

  <button type="submit">Add burger</button>
</form>